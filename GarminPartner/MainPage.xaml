<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarminPartner.MainPage"
             Title="Workouts">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="🏃 Your Workouts"
                   FontSize="28"
                   FontAttributes="Bold"
                   Margin="0,20,0,10"/>

            <Label x:Name="StatusLabel"
                   FontSize="14"
                   TextColor="{StaticResource Tertiary}"/>

            <Frame BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                   CornerRadius="10"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Quick Actions"
                           FontSize="18"
                           FontAttributes="Bold"/>

                    <Button Text="📤 Send Simple 5K Run"
                            Clicked="OnSendSimpleWorkoutClicked"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            HeightRequest="50"
                            CornerRadius="10"/>

                    <Button Text="🔧 Create Custom Workout"
                            Clicked="OnCreateCustomWorkoutClicked"
                            BackgroundColor="{StaticResource Secondary}"
                            TextColor="White"
                            HeightRequest="50"
                            CornerRadius="10"/>
                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                   CornerRadius="10"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Account"
                           FontSize="18"
                           FontAttributes="Bold"/>

                    <Button Text="🚪 Logout"
                            Clicked="OnLogoutClicked"
                            BackgroundColor="{StaticResource Tertiary}"
                            TextColor="White"
                            HeightRequest="50"
                            CornerRadius="10"/>
                </VerticalStackLayout>
            </Frame>

            <ActivityIndicator x:Name="LoadingIndicator"
                             IsRunning="False"
                             IsVisible="False"
                             Color="{StaticResource Primary}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
