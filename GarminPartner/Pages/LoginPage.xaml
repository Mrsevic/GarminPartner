<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarminPartner.Pages.LoginPage"
             Title="Garmin Login">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="ðŸƒ Garmin Partner"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,40,0,20"/>

            <Label Text="Login to Garmin Connect"
                   FontSize="18"
                   HorizontalOptions="Center"/>

            <Frame BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                   CornerRadius="10"
                   Padding="0">
                <VerticalStackLayout Spacing="15" Padding="15">
                    <Entry x:Name="EmailEntry"
                           Placeholder="Email"
                           Keyboard="Email"
                           TextChanged="OnEntryChanged"/>
                    
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Password"
                           IsPassword="True"
                           TextChanged="OnEntryChanged"/>
                </VerticalStackLayout>
            </Frame>

            <Button x:Name="LoginButton"
                    Text="Login"
                    Clicked="OnLoginClicked"
                    IsEnabled="False"
                    HeightRequest="50"
                    CornerRadius="10"/>

            <ActivityIndicator x:Name="LoadingIndicator"
                             IsRunning="False"
                             IsVisible="False"
                             Color="{StaticResource Primary}"/>

            <Label x:Name="StatusLabel"
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Tertiary}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
